pipeline {
    agent any
    stages {
        stage('Example Build') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Example Deploy') {
            timeout(time: 10, unit: 'SECONDS')
            when {
                expression {env.GIT_BRANCH == 'origin/main'}
            }
            steps {
                sh '''
                echo 'Deploying'
                sleep 15
                '''
            }
        }
    }
}
